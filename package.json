{
  "name": "authz",
  "version": "0.0.0-placeholder",
  "description": "基于 node-casbin 实现的 RBAC 权限控制模块。",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest"
  },
  "keywords": [],
  "author": "dreamdevil00",
  "license": "MIT",
  "dependencies": {
    "casbin": "^2.0.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.8",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.+(ts|tsx)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
